<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#2b2b2b"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
     
    <RelativeLayout
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:layout_marginTop="10dp"
   		android:layout_marginBottom="10dp">
    		
        	<ImageView   
        	android:id="@+id/iv_head"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginLeft="10dp"
    		android:layout_centerHorizontal="true"
    		android:background="@drawable/main_info_profile_bg"/>
        	
        	<LinearLayout 
        	android:layout_below="@id/iv_head"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="10dp"
    		android:layout_centerHorizontal="true"
    		android:orientation="vertical">
    		 
        	    <TextView
	        	    android:layout_width="wrap_content"
	    			android:layout_height="wrap_content"
	    			android:text="立即登录"
	    			style="@style/NavigationTextStyle" />      	        
        	    
        	</LinearLayout>	    
        
    </RelativeLayout>   
    
    
    <LinearLayout 
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
            
            <!-- 天气 -->       
	   		<LinearLayout 
	   		    android:id="@+id/weather_item"
	        style="@style/leba_bg_single_layout">                
		    
				    <ImageView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="10dp"
				    android:layout_centerVertical="true"
				    android:background="@drawable/icon_weather"/>
			
			    	<TextView
			        android:id="@+id/tv_content"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dp"
			        android:layout_centerVertical="true"
			        android:text="27°/17°"
			        style="@style/NavigationTextStyle"/>  
		  	</LinearLayout>
		  		 
	   		<!-- 收藏 -->       
	   		<LinearLayout 
	        style="@style/leba_bg_single_layout"
	        android:layout_marginTop="0dp">                
		    
				    <ImageView
				    android:id="@+id/imageView"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="10dp"
				    android:layout_centerVertical="true"
				    android:background="@drawable/icon_collection"/>
			
			
			    	<TextView
			        android:id="@+id/tv_content"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dp"
			        android:layout_centerVertical="true"
			        android:text="收藏"
			        style="@style/NavigationTextStyle"/>  
		  	</LinearLayout>
		  	
	   		<!-- 夜间模式 -->       
	   		<LinearLayout 
	        style="@style/leba_bg_single_layout">                
		    
				    <ImageView
				    android:id="@+id/imageView"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="10dp"
				    android:layout_centerVertical="true"
				    android:background="@drawable/icon_theme"/>
			
			
			    	<TextView
			        android:id="@+id/tv_content"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dp"
			        android:layout_centerVertical="true"
			        android:text="夜间"
			        style="@style/NavigationTextStyle"/>  
	  		</LinearLayout>
	  		 
	   		<!-- 设置-->       
	   		<LinearLayout 
	        style="@style/leba_bg_single_layout">                
		    
				    <ImageView
				    android:id="@+id/imageView"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="10dp"
				    android:layout_centerVertical="true"
				    android:background="@drawable/ic_mine_setting"/>
			
			
			    	<TextView
			        android:id="@+id/tv_content"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="10dp"
			        android:layout_centerVertical="true"
			        android:text="设置"
			        style="@style/NavigationTextStyle"/>  
		  	</LinearLayout>		   		
	</LinearLayout>    

</LinearLayout>